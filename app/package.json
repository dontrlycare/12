{
    "name": "media-sender-app",
    "version": "1.0.0",
    "description": "Media Sender App - Send photos and videos to Telegram",
    "main": "dist/index.js",
    "scripts": {
        "start": "http-server src -p 8080",
        "build": "echo 'No build step required'",
        "cap:init": "cap init MediaSender com.mediasender.app",
        "cap:add:android": "cap add android",
        "cap:add:ios": "cap add ios",
        "cap:sync": "cap sync",
        "cap:open:android": "cap open android",
        "cap:open:ios": "cap open ios"
    },
    "dependencies": {
        "@capacitor/android": "^5.6.0",
        "@capacitor/camera": "^5.0.8",
        "@capacitor/core": "^5.6.0",
        "@capacitor/filesystem": "^5.2.0",
        "@capacitor/ios": "^5.6.0",
        "@capacitor/preferences": "^5.0.7"
    },
    "devDependencies": {
        "@capacitor/cli": "^5.6.0",
        "http-server": "^14.1.1",
        "typescript": "^5.9.3"
    }
}
